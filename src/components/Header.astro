<style>
  .link--metis {
    position: relative;
    padding-bottom: 2px;
  }
  .link--metis::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: currentColor;
    transform-origin: 100% 50%;
    transform: scaleX(0);
    transition: transform 0.3s;
  }

  .link--metis:hover::after {
    transform-origin: 0% 50%;
    transform: scaleX(1);
  }
</style>
