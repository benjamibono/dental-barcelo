---
import "@fontsource-variable/montserrat";
import SpeedInsights from "@vercel/speed-insights/astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = title.includes("Clínica") ? "es" : "en";
const description =
  lang === "es"
    ? "Clínica Dental Barceló en El Puerto de Santa María. Servicios completos de odontología: implantes, ortodoncia, estética dental y más. Cuidamos tu sonrisa con profesionalidad y tecnología avanzada."
    : "Barceló Dental Clinic in El Puerto de Santa María. Complete dental services: implants, orthodontics, dental aesthetics and more. We take care of your smile with professionalism and advanced technology.";
const websiteUrl = "https://dentalbarcelo.com";
const imageUrl = `${websiteUrl}/images/clinica-dental-barcelo.webp`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />

    <!-- HTML Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="keywords"
      content="Dentista, Ortodoncista, El Puerto de Santa María, Implantes Dentales, Estética Dental"
    />
    <link rel="canonical" href={websiteUrl} />
    <link rel="icon" href="/favicon.svg" type="image/x-icon" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={websiteUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="dentalbarcelo.com" />
    <meta property="twitter:url" content={websiteUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <script src="/scripts/activeNavLinks.js" defer></script>
  </head>
  <body>
    <div class="mx-auto min-h-screen max-w-6xl md:max-w-full">
      <slot />
    </div>
    <SpeedInsights />
  </body>
</html>
